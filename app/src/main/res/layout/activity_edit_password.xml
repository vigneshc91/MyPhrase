<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.phrase.my.myphrase.EditPasswordActivity"
    android:background="@drawable/bgimage">

    <TextView
        android:id="@+id/textViewEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Edit Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editPasswordEditTextTitle"
        android:hint="Title"
        style="@android:style/Widget.Material.EditText"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textViewEdit"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editPasswordEditTextUserName"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editPasswordEditTextPassword"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="User Name"
        android:inputType="textPersonName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPasswordEditTextPassword"
        android:hint="Password"
        style="@android:style/Widget.Material.EditText"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/editPasswordEditTextComments"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Comments"
        android:inputType="textPersonName"
        android:layout_below="@+id/editPasswordEditTextPassword"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/editPasswordBtn"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/editPasswordEditTextComments"
        android:layout_alignEnd="@+id/editPasswordEditTextComments" />

</RelativeLayout>
